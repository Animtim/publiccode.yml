        "hardware": {
          "$id": "/properties/dependencies/properties/hardware",
          "type": "array",
          "items": {
            "$id": "/properties/dependencies/properties/hardware/items",
            "type": "string",
            "title": "The 0th Schema ",
            "default": "",
            "examples": [
              "NFC Reader (chipset xxx)"
            ]
          }
        }
      }
