{
  "title": "publiccode",
  "$id": "http://example.com/example.json",
  "type": "object",
  "definitions": {
        "legal": {},
        "dependencies": {},
        "version": {},
        "tmpfs": {}
  },
  "properties": {
    "publiccodeYmlVersion": {
      "$id": "/properties/publiccodeYmlVersion",
      "type": "string",
      "title": "Specification Version",
      "description": "This key specifies the version to which the current publiccode.yml adheres to, for forward compatibility.",
      "default": "",
      "examples": [
        "0.1"
      ]
    },
    "name": {
      "$id": "/properties/name",
      "type": "string",
      "title": "The Schema Name",
      "default": "",
      "examples": [
        "Medusa"
      ]
    },
    "applicationSuite": {
      "$id": "/properties/applicationSuite",
      "type": "string",
      "title": "The Application Suite",
      "default": "",
      "examples": [
        "MegaProductivitySuite"
      ]
    },
    "url": {
      "$id": "/properties/url",
      "type": "string",
      "title": "The Repo URL",
      "default": "",
      "examples": [
        "https://example.com/italia/medusa.git"
      ]
    },
    "landingUrl": {
      "$id": "/properties/landingURL",
      "type": "string",
      "title": "The Landing URL",
      "default": "",
      "examples": [
        "https://example.com/italia/medusa"
      ]
    },
    "isBasedOn": {
      "$id": "/properties/isBasedOn",
      "type": "string",
      "title": "Identifies this project as a fork or software variant",
      "default": "",
      "examples": [
        "https://github.com/italia/otello.git"
      ]
    },
    "softwareVersion": {
      "$id": "/properties/softwareVersion",
      "type": "string",
      "title": "The Software Version Schema",
      "default": "",
      "examples": [
        "1.0"
      ]
    },
    "releaseDate": {
      "$id": "/properties/releaseDate",
      "type": "string",
      "title": "The Release Date Schema ",
      "default": "",
      "examples": [
        "2017-04-15"
      ]
    },
    "logo": {
      "$id": "/properties/logo",
      "type": "string",
      "title": "The Logo Schema ",
      "default": "",
      "examples": [
        "img/logo.jpg"
      ]
    },
    "monochromeLogo": {
      "$id": "/properties/monochromeLogo",
      "type": "string",
      "title": "The monochrome Logo",
      "default": "",
      "examples": [
        "img/logo-mono.jpg"
      ]
    },
   "inputTypes": {
      "$id": "/properties/inputTypes",
      "type": "array",
      "title": "The supported Input Types",
      "default": "",
      "examples": [
        "text/plain"
      ]
