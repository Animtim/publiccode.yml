        "$id": "/properties/platforms/items",
        "type": "string",
        "title": "The 0th Schema ",
        "default": "",
        "examples": [
          "android",
          "ios"
        ]
      }
    },
    "softwareType": {
      "$id": "/properties/softwareType",
      "type": "object",
      "properties": {
        "addon": {
          "$id": "/properties/softwareType/properties/addon",
          "type": "boolean",
          "title": "The Software Addon Schema ",
          "default": false,
          "examples": [
            false
          ]
