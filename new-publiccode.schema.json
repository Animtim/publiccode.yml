            "videos": {
              "$id": "/properties/localization/properties/it/properties/videos",
              "type": "array",
              "items": {
                "$id": "/properties/localization/properties/it/properties/videos/items",
                "type": "string",
                "title": "The 0th Schema ",
                "default": "",
                "examples": [
                  "https://youtube.com/xxxxxxxx"
                ]
