          "items": {
            "$id": "/properties/intendedAudience/properties/countries/items",
            "type": "string",
            "title": "List of countries",
            "description": "List of the countries",
            "default": "",
            "examples": [
              "fr"
            ]
          }
        }
      }
    },
    "usedBy": {
      "$id": "/properties/usedBy",
      "type": "array",
      "items": {
        "$id": "/properties/usedBy/items",
        "type": "string",
        "title": "The 0th Schema ",
        "default": "",
        "examples": [
          "Comune di Firenze",
          "Comune di Roma"
        ]
      }
    },
    "legal": {
      "$id": "/properties/legal",
      "type": "object",
      "properties": {
        "mainCopyrightOwner": {
          "$id": "/properties/legal/properties/mainCopyrightOwner",
          "type": "string",
          "title": "The Main Copyright Owner Schema ",
          "default": "",
          "examples": [
            "Comune di Reggio Emilia and friends"
          ]
        },
        "repoOwner": {
          "$id": "/properties/legal/properties/repoOwner",
          "type": "string",
          "title": "The Repo Owner Schema ",
          "default": "",
          "examples": [
            "Comune di Reggio Emilia"
          ]
        },
        "authorsFile": {
          "$id": "/properties/legal/properties/authorsFile",
          "type": "string",
          "title": "The Authorsfile Schema ",
          "default": "",
          "examples": [
            "AUTHORS"
          ]
        },
        "license": {
          "$id": "/properties/legal/properties/license",
          "type": "string",
          "title": "The License Schema ",
          "default": "",
          "examples": [
            "AGPL-3.0-or-later"
          ]
        }
      }
    },
    "developmentStatus": {
      "$id": "/properties/developmentStatus",
      "type": "object",
      "properties": {
        "concept": {
          "$id": "/properties/developmentStatus/properties/concept",
          "type": "boolean",
