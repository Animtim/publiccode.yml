              "affiliation": {
                "$id": "/properties/maintenance/properties/contacts/items/properties/affiliation",
                "type": "string",
                "title": "The Affiliation Schema ",
                "default": "",
                "examples": [
                  "Comune di Reggio Emilia"
                ]
