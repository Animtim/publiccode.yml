          "$id": "/properties/maintenance/properties/unmaintained",
          "type": "boolean",
          "title": "The Unmaintained Schema ",
          "default": false,
          "examples": [
            false
          ]
        },
        "contacts": {
          "$id": "/properties/maintenance/properties/contacts",
          "type": "array",
          "items": {
            "$id": "/properties/maintenance/properties/contacts/items",
            "type": "object",
            "properties": {
              "name": {
                "$id": "/properties/maintenance/properties/contacts/items/properties/name",
                "type": "string",
                "title": "The Name Schema ",
                "default": "",
