            "screenshots": {
              "$id": "/properties/localization/properties/it/properties/screenshots",
              "type": "array",
              "items": {
                "$id": "/properties/localization/properties/it/properties/screenshots/items",
                "type": "string",
                "title": "The 0th Schema ",
                "default": "",
                "examples": [
                  "img/sshot1.jpg",
