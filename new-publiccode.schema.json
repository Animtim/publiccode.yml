        "standalone": {
          "$id": "/properties/softwareType/properties/standalone",
          "type": "boolean",
          "title": "The Standalone Schema ",
          "default": false,
          "examples": [
            true
          ]
        },
        "library": {
          "$id": "/properties/softwareType/properties/library",
          "type": "boolean",
          "title": "The Library Schema ",
          "default": false,
          "examples": [
