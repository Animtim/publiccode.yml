   "outputTypes": {
      "$id": "/properties/outputTypes",
      "type": "array",
      "title": "The supported Output Types",
      "default": "",
      "examples": [
        "text/plain"
      ]
    },
    "platforms": {
      "$id": "/properties/platforms",
      "type": "array",
