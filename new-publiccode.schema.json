              "email": {
                "$id": "/properties/maintenance/properties/contacts/items/properties/email",
                "type": "string",
                "title": "The Email Schema ",
                "default": "",
                "examples": [
                  "francesco.rossi@comune.reggioemilia.it"
                ]
