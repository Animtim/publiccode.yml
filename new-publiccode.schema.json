              "phone": {
                "$id": "/properties/maintenance/properties/contacts/items/properties/phone",
                "type": "string",
                "title": "The Phone Schema ",
                "default": "",
                "examples": [
                  "+39 231 13215112"
                ]
              }
            }
          }
